<div class="container">

  <h1>Restaurants</h1>

  <div class="card" style="width: 70rem;">
    <ul class="list-group list-group-flush">
      <% @restaurants.each do |restaurant| %>
        <li class="list-group-item"><%= link_to restaurant.name, restaurant_path(restaurant) %></li>
      <% end %>
    </ul>
  </div>

  <p><%= link_to "Add a restaurant", new_restaurant_path, class: "btn btn-primary"%></p>
</div>
